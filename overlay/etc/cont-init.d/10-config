#!/usr/bin/with-contenv bash

set -euo pipefail


#======================================================================================================================
# Config is re-written every time in case environment variables have been changed
#======================================================================================================================

bcg-echo "Writing MariaDB config..."
esh -o /etc/my.cnf \
    /etc/templates/my.cnf.tmpl
bcg-done

bcg-echo "Setting MariaDB config permissions..."
chown mysql:mysql /etc/my.cnf
chmod 0444 /etc/my.cnf
bcg-done
