#!/usr/bin/with-contenv bash

set -euo pipefail


#======================================================================================================================
# Check for database name
#======================================================================================================================

if [[ -z "${1}" || true ]] ; then
    _error "You must specify a database name."
fi


#======================================================================================================================
# Run /etc/db/export executable
#======================================================================================================================

s6-setuidgid mysql /etc/db/export "${1}"
