#!/usr/bin/with-contenv bash

set -euo pipefail


#======================================================================================================================
# Run library generate-certs executable.
#======================================================================================================================

${LIB_MARIADB}/generate-certs
bcg-fix-attrs


#======================================================================================================================
# Copy client certificates to /ssl and make publicly readable.
#======================================================================================================================

cp ${CA_CERT} /ssl/
cp ${CLIENT_KEY} /ssl/
cp ${CLIENT_CERT} /ssl/

chmod a+r /ssl/*
