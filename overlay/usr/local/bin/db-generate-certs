#!/usr/bin/with-contenv bash

set -eo pipefail


#======================================================================================================================
# Run ${LIB}/mariadb/generate-certs executable
#======================================================================================================================

${LIB}/mariadb/generate-certs
bcg-fix-attrs


#======================================================================================================================
# Copy client certificates to /ssl and make publicly readable
#======================================================================================================================

cp ${CA_CERT} /ssl/
cp ${CLIENT_KEY} /ssl/
cp ${CLIENT_CERT} /ssl/

chmod a+r /ssl/*
